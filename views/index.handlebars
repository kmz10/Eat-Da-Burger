{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">

    <div class="jumbotron">
        <h1 id="titleText">Munch Dem Burgers!!!</h1>
        <p id="titleText">Munch On Your Own Created Burger.</p>
        <panel>
            <form class="form-inline enterBg">
                <div class="form-group">
                    <label for="newburger" id="titleText">
                        <h2>Desire Munch!</h2>
                    </label>
                    <input class="break" type="text" id="newburger" name="burger" placeholder="ex. burger"> {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                    <button type="submit" class="create btn btn-dark btn-outline-warning btn-sm" id="addburger">Create
                        <span class="fa fa-empire" aria-hidden="true"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <!-- /jumbotron -->

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header" id="leftCard">
                    <strong>Created Burgers</strong>
                </div>

                <div class="card-body">
                    <ul>
                        {{#each burgers}} {{#unless devoured}}
                        <span>
                            <strong> {{this.id}} - {{this.burger_name}} </strong>
                        </span>
                        <button type="button" class="eatburger btn btn-dark btn-outline-success btn-sm" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Munch
                            <span class="fa fa-check" aria-hidden="true"></span>
                        </button>
                        <hr> {{/unless}} {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header" id="rightCard">
                    <strong>Munched Burgers</strong>
                </div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}} {{#if devoured}}
                        <span>
                            <strong> {{this.id}} - {{this.burger_name}} </strong>
                        </span>
                        <button type="button" class="trashburger btn btn-dark btn-outline-danger btn-sm" id="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Remove
                            <span class="fa fa-trash"></span>
                        </button>
                        <hr> {{/if}} {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- /row -->

</div>
<!-- /container -->